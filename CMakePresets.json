{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev-debug",
      "displayName": "Dev Debug",
      "generator": "Ninja",
      "binaryDir": "build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev-release",
      "displayName": "Dev Release",
      "generator": "Ninja",
      "binaryDir": "build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "analysis",
      "displayName": "Static Analysis (clang-tidy)",
      "inherits": ["dev-debug"],
      "cacheVariables": {
        "USE_CLANG_TIDY": "ON"
      }
    }
  ],
  "buildPresets": [
    { "name": "dev-debug", "configurePreset": "dev-debug" },
    { "name": "dev-release", "configurePreset": "dev-release" },
    { "name": "analysis", "configurePreset": "analysis" }
  ],
  "testPresets": [
    { "name": "dev", "configurePreset": "dev-debug", "execution": { "jobs": 8 } }
  ]
}
